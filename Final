document.querySelectorAll('.mood-btn').forEach(button => {
  button.addEventListener('click', () => {
    const mood = button.getAttribute('data-mood');
    const itinerary = itineraries[mood];
    
    const listHTML = itinerary.places.map(place => `<li> * ${place}</li>`).join("");

    document.getElementById('itineraryResult').innerHTML = `
      <h3>${itinerary.heading}</h3>
      <ul style="text-align:left; list-style: none; padding-left: 0;">
        ${listHTML}
      </ul>
    `;
  });
});



        function searchTrains() {
            const from = document.getElementById('trainFrom').value;
            const to = document.getElementById('trainTo').value;
            const date = document.getElementById('trainDate').value;
            const resultsDiv = document.getElementById('trainResults');

            const trains = [
                { train: 'Train 123', time: '9:00 AM', price: '$80', class: 'AC 2 Tier', features: ['Meals'] },
                { train: 'Train 456', time: '1:00 PM', price: '$90', class: 'Sleeper', features: [] },
            ];

            resultsDiv.innerHTML = trains.map(train => `
                <div class="result-item">
                    <div>
                        <h3>${train.train}</h3>
                        <p>Time: ${train.time}, Class: ${train.class}</p>
                        <div class="features">
                            ${train.features.map(feature => `<span>${feature}</span>`).join('')}
                        </div>
                    </div>
                    <div class="price">
                        ${train.price} <button>Book</button>
                    </div>
                </div>
            `).join('');
        }
        // explore

        function showTab(tabId) {
  const tabs = document.querySelectorAll(".tab-content");
  const buttons = document.querySelectorAll(".tab-btn");
  
  tabs.forEach(tab => tab.classList.remove("active-tab"));
  buttons.forEach(btn => btn.classList.remove("active"));

  document.getElementById(tabId).classList.add("active-tab");
  event.target.classList.add("active");
}
document.querySelector(".match-form").addEventListener("submit", function (e) {
  e.preventDefault();

  const destination = this.querySelector("input[type='text']").value;
  const style = this.querySelector("select").value;
  const startDate = this.querySelector("input[type='date']").value;
  const endDate = this.querySelectorAll("input[type='date']")[1].value;

  fetch("/api/find-matches", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      destination,
      style,
      startDate,
      endDate
    }),
  })
  .then(res => res.json())
  .then(data => {
    alert("Matches found: " + JSON.stringify(data));
    // You can display them dynamically instead of alert.
  })
  .catch(err => {
    alert("Error finding matches.");
    console.error(err);
  });
});
