       document.querySelector('.controls .active').classList.remove('active');
        btn.classList.add('active');
       let src = btn.getAttribute('data-src');
        document.querySelector('#video-slider').src = src;
  });
});
function addToWishlist(title, price) {
    const userId = localStorage.getItem("user_id");
    if (!userId) {
      alert("Please login to save items to your wishlist.");
      return;
    }

    let wishlist = JSON.parse(localStorage.getItem("wishlist")) || [];

    // Avoid duplicate entries
    const alreadyAdded = wishlist.some(item => item.title === title && item.price === price);
    if (alreadyAdded) {
      alert("Already in your wishlist!");
      return;
    }

    wishlist.push({ title, price });
    localStorage.setItem("wishlist", JSON.stringify(wishlist));
    alert(`${title} added to your wishlist!`);
  }
     document.addEventListener('DOMContentLoaded', function() {
            const tabButtons = document.querySelectorAll('.tab-button');
            const tabContents = document.querySelectorAll('.tab-content');

            tabButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const tabId = this.getAttribute('data-tab');

                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    tabContents.forEach(content => content.classList.remove('active'));

                    this.classList.add('active');
                    document.getElementById(tabId).classList.add('active');
                });
            });
        });

        function searchFlights() {
            const from = document.getElementById('flightFrom').value;
            const to = document.getElementById('flightTo').value;
            const date = document.getElementById('flightDate').value;
            const resultsDiv = document.getElementById('flightResults');

            const flights = [
                { airline: 'Airline A', time: '10:00 AM', price: '$200', stops: '1 Stop', duration: '3h', features: ['Wi-Fi', 'Meals'] },
                { airline: 'Airline B', time: '2:00 PM', price: '$250', stops: 'Direct', duration: '2h', features: ['Entertainment'] },
            ];

            resultsDiv.innerHTML = flights.map(flight => `
                <div class="result-item">
                    <div>
                        <h3>${flight.airline}</h3>
                        <p>Time: ${flight.time}, Stops: ${flight.stops}, Duration: ${flight.duration}</p>
                        <div class="features">
                            ${flight.features.map(feature => `<span>${feature}</span>`).join('')}
                        </div>
                    </div>
                    <div class="price">
                        ${flight.price} <button>Book</button>
                    </div>
                </div>
            `).join('');
        }

        function searchBuses() {
            const from = document.getElementById('busFrom').value;
            const to = document.getElementById('busTo').value;
            const date = document.getElementById('busDate').value;
            const resultsDiv = document.getElementById('busResults');

            const buses = [
                { operator: 'Bus Co. 1', time: '8:00 AM', price: '$50', type: 'AC Sleeper', features: ['Wi-Fi', 'Charging'] },
                { operator: 'Bus Co. 2', time: '11:00 AM', price: '$60', type: 'Non-AC Seater', features: [] },
            ];

            resultsDiv.innerHTML = buses.map(bus => `
                <div class="result-item">
                    <div>
                        <h3>${bus.operator}</h3>
                        <p>Time: ${bus.time}, Type: ${bus.type}</p>
                        <div class="features">
                            ${bus.features.map(feature => `<span>${feature}</span>`).join('')}
                        </div>
                    </div>
                    <div class="price">
                        ${bus.price} <button>Book</button>
                    </div>
                </div>
            `).join('');
        }
       
